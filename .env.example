# Application
APP_NAME=AI Meeting Automation
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-this-in-production

# Server
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://aimeet_user:your_password@localhost:5432/aimeet

# Redis
REDIS_URL=redis://localhost:6379/0

# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here

# Hugging Face
HUGGINGFACE_TOKEN=hf_your-token-here

# n8n Webhooks
N8N_WEBHOOK_BASE_URL=http://localhost:5678/webhook

# Bot Credentials (Encrypted in database, these are fallbacks)
GOOGLE_BOT_EMAIL=aimeet.bot@gmail.com
GOOGLE_BOT_PASSWORD=your_bot_password

# File Storage
RECORDINGS_PATH=./recordings
MAX_RECORDING_SIZE_GB=50

# Session Security
SESSION_EXPIRE_HOURS=24
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# WebSocket
WS_PORT=8001

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Processing
MAX_CONCURRENT_BOTS=3
TRANSCRIPTION_MODEL=medium.en
GPU_ENABLED=false
